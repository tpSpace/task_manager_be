{
  "name": "task_manager_be",
  "version": "1.0.0",
  "description": "backend",
  "main": "index.ts",
  "repository": "https://github.com/tpSpace/task_manager_be",
  "author": "tpSpace <ITCSIU21081@student.hcmiu.edu.vn>",
  "license": "gnu",
  "private": true,
  "scripts": {
    "dev": "yarn run generate && clear && nodemon -r ts-node/register src/index.ts",
    "start": "npm run generate && ts-node-dev --inspect --respawn --transpile-only --exit-child src/index.ts",
    "build": "tsc . -p",
    "generate": "npx prisma generate"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "exec": "ts-node ./src/index.ts"
  },
  "dependencies": {
    "@prisma/client": "^5.4.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.4",
    "@types/node": "^20.8.4",
    "bcrypt-ts": "^5.0.0",
    "concurrently": "^8.2.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.1.0",
    "nodemon": "^3.0.1",
    "prisma": "^5.4.2",
    "redis": "^4.6.10",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2",
    "zod": "^3.22.2"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.4",
    "prettier": "3.0.3"
  }
}
