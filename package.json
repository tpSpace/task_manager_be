{
  "name": "task_manager_be",
  "version": "1.0.0",
  "description": "backend",
  "main": "index.ts",
  "repository": "https://github.com/tpSpace/task_manager_be",
  "author": "tpSpace <ITCSIU21081@student.hcmiu.edu.vn>",
  "license": "gnu",
  "private": true,
  "scripts": {
    "dev": "nodemon -r ts-node/register src/index.ts",
    "start": "npm run generate && ts-node-dev --inspect --respawn --transpile-only --exit-child src/index.ts",
    "build": "tsc -p . && yarn run generate",
    "format": "prettier . --write",
    "generate": "npx prisma generate",
    "integration-test": "mocha --require ts-node/register test/integration/**/*.test.ts --exit",
    "test": "mocha --require ts-node/register"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "exec": "ts-node ./src/index.ts"
  },
  "dependencies": {
    "@prisma/client": "^5.7.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.4",
    "@types/node": "^20.8.4",
    "bcrypt-ts": "^5.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.3.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2",
    "zod": "^3.22.2"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "devDependencies": {
    "@types/chai": "^4.3.11",
    "@types/connect": "^3.4.38",
    "@types/jsonwebtoken": "^9.0.4",
    "@types/mocha": "^10.0.6",
    "@types/supertest": "^2.0.16",
    "chai": "^4.3.10",
    "mocha": "^10.2.0",
    "prettier": "3.1.1",
    "prisma": "^5.7.0"
  }
}
